                    </GridPane>
                </VBox>

                <!-- SREDINA: Info Panel -->
                <VBox spacing="15" alignment="TOP_CENTER" style="-fx-min-width: 280;">
                    <Label fx:id="gameStatusLabel" text="Postavi brodove"

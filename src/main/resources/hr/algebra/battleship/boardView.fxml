                        onAction="#selectCarrier"/>

                <Button fx:id="battleshipBtn" text="Battleship (4)"
                        style="-fx-padding: 8px 12px; -fx-font-size: 12px;"
                        onAction="#selectBattleship"/>

                <Button fx:id="cruiserBtn" text="Cruiser (3)"
                        style="-fx-padding: 8px 12px; -fx-font-size: 12px;"
                        onAction="#selectCruiser"/>

                <Button fx:id="submarineBtn" text="Submarine (3)"
                        style="-fx-padding: 8px 12px; -fx-font-size: 12px;"
                        onAction="#selectSubmarine"/>

                <Button fx:id="destroyerBtn" text="Destroyer (2)"
